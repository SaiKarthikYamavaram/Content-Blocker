{
	"manifest_version": 2,
	"name": "Content Blocker",
	"version": "0.0.1",
	"description": "A keyword based content blocking extension built with love ‚ù§ ",
	"icons": {
		"120": "icons/icon128.png",
		"48": "icons/icon48.png",
		"16": "icons/icon16.png"
	},
	"browser_action": {
		"default": "icon16.png",
		"default_popup": "popup.html"
	},
	"permissions": ["storage","activeTab"],
	"background": {
		"scripts": ["popup.js"]
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["jquery-4.0.0.min.js", "hide-content.js"],
			"run_at": "document_end"
		}
		
	],
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com object-src 'self'"
}
